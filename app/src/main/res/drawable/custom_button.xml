<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">

            <corners android:radius="5dp" />

            <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp" />

            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content">

            <corners android:radius="5dp" />
            <solid android:color="@color/colorAccent" />

        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content">

            <corners android:radius="5dp" />
            <solid android:color="@color/colorAccent" />

        </shape>
    </item>
</selector>
